<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jordanterry.co.uk.redbluered" >

    <application
        android:allowBackup="true"
        android:name=".RBRApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/RedBlueRed.Theme" >
        <activity
            android:name=".ui.activities.MenuActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.GameActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.activities.GameOverActivity"
            android:label="@string/app_name" />
    </application>

</manifest>
